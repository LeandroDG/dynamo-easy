{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016.array.include"
    ],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "compiled",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": [
    "src"
  ]
}
